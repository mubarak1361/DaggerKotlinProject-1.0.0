            name="viewModel"
            type="net.alhazmy13.demoproject.viewmodel.PostViewModel"/>
    </data>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layoutResourceId="@{@layout/item_post}"
